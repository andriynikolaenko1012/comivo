<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/r1">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/iv_online_status"
            android:layout_centerVertical="true" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/iv_cover_image"
            android:layout_toRightOf="@+id/iv_online_status"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/iv_arrow_right"
            android:src="@drawable/ic_arrow_right"
            android:layout_alignBottom="@+id/iv_cover_image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_user_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_cover_image"
            android:textSize="12sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_company_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_user_name"
            android:textSize="12sp"
            android:textColor="@color/dim_foreground_material_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_time"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorMain" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_message_text"
            android:textSize="10sp"
            android:layout_below="@+id/tv_user_name"
            android:layout_alignLeft="@+id/tv_user_name"
            android:layout_alignStart="@+id/tv_user_name"
            android:inputType="textMultiLine" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_white_grey"
        android:layout_below="@+id/r1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
    </View>

</RelativeLayout>